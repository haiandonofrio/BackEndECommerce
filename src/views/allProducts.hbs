{{#each products}}
<tr class='p-5'>

    <td>{{_doc.title}}</td>
    <td>{{_doc.description}}</td>
    <td>${{_doc.price}}</td>
    <td>{{_doc.code}}</td>
    <td>{{_doc.stock}}</td>
    <td>{{_doc.status}}</td>
    <td>{{_doc.thumbnails}}</td>
    <td>{{_doc.category}}</td>
</tr>
