
<div>
    <h1>Bienvenido</h1>
    {{#if admin }}
    <h2>Usted es Administrador del sistema!</h2>
    {{/if}}
    <p>{{user._doc.first_name}}</p>
    <p>{{user._doc.last_name}}</p>
    <p>{{user._doc.email}}</p>
    <p>{{user._doc.age}}</p>
</div>

<form id="logoutButton">
    <input value="Logout" type="submit" name="logout" aria-label="Cerrar sesión">
</form>

<a href="/api/views/documents">Link para añadir Documents</a>
