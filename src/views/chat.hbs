<!-- views/realTimeProducts.handlebars -->

<h1 class="container">Envianos tu mensaje!</h1>

    <div class="container m-5">
        
        <form action="/api/message" , method="POST">
            <div class="form-group">
                <label for="user">Email</label>
                <input name='user' type="email" class="form-control" id="user" placeholder="haianjoel@hotmail.com">
            </div>
            <div class="form-group">
                <label for="message">Mensaje</label>
                <textarea name='message' class="form-control" id="message" placeholder="Escribinos tu mensaje"></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary">Enviar mensaje</button>
        </form>
    </div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>


